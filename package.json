{
  "name": "@resume-kit",
  "version": "0.1.1",
  "description": "Universal Web Components for Resume/CV (works with React, Vue, Svelte, and vanilla JS)",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --declaration --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist",
    "yalc:publish": "pnpm run clean && pnpm run build && yalc push",
    "release": "node scripts/release.js",
    "release:prep": "node scripts/release.js --skip-npm --skip-github",
    "release:only": "node scripts/release.js --skip-npm --skip-github && pnpm build && npm publish --access public",
    "version:patch": "node scripts/version-patch.js",
    "changelog": "node scripts/update-changelog.js"
  },
  "dependencies": {
    "lit": "^3.2.1",
    "lucide": "^0.379.0"
  },
  "devDependencies": {
    "postcss": "^8",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.6.3",
    "vite": "^6.0.7"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
